<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="store.modules.insights.fragments.DeleveredOrderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_semi_bold"
            android:text="Delivered Orders"
            android:textColor="@color/colorTextTitle"
            android:textSize="@dimen/_14ssp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semi_bold"
                android:text="See More"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_fi_rr_angle_small_right"
                />
        </LinearLayout>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/card_today"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:elevation="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardBackgroundColor="#42CC9F">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:orientation="vertical">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:text="Today"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12ssp" />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/open_sans_semi_bold"
                            android:text="₹2560"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:text="9 Orders"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_9ssp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorDivider"
                        android:layout_marginBottom="@dimen/_2sdp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:text="This Week"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_12ssp" />
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/open_sans_semi_bold"
                                android:text="₹25600"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_14ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:text="90 Orders"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_9ssp" />
                        </LinearLayout>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorDivider"
                            android:layout_marginBottom="@dimen/_2sdp"/>
                        <LinearLayout
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:text="This Month"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_12ssp" />
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/open_sans_semi_bold"
                                android:text="₹256000"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_14ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:text="901 Orders"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_9ssp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:elevation="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardBackgroundColor="#42CC9F"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp"
                        android:orientation="vertical">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:text="Yesterday"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12ssp" />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/open_sans_semi_bold"
                            android:text="₹2560"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:text="9 Orders"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_9ssp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorDivider"
                        android:layout_marginBottom="@dimen/_2sdp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:text="Last Week"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_12ssp" />
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/open_sans_semi_bold"
                                android:text="₹25600"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_14ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:text="90 Orders"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_9ssp" />
                        </LinearLayout>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorDivider"
                            android:layout_marginBottom="@dimen/_2sdp"/>
                        <LinearLayout
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:text="Last Month"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_12ssp" />
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/open_sans_semi_bold"
                                android:text="₹256000"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_14ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:text="901 Orders"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_9ssp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>