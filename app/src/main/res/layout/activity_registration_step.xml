            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="8">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/viewOneBasic"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_above="@id/ivBasic"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:background="@color/colorDivider" />

                    <ImageView
                        android:id="@+id/ivBasic"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_circle_step_inactive"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/ic_sba_business" />

                    <View
                        android:id="@+id/viewTwoBasic"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ivBasic"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:background="@color/colorDivider" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/viewOneContact"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_above="@id/ivContact"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:background="@color/colorDivider" />

                    <ImageView
                        android:id="@+id/ivContact"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_circle_step_inactive"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/ic_sba_contact" />

                    <View
                        android:id="@+id/viewTwoContact"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ivContact"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:background="@color/colorDivider" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/viewOneBank"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_above="@id/ivBank"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:background="@color/colorDivider" />

                    <ImageView
                        android:id="@+id/ivBank"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_circle_step_inactive"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/ic_sba_bank" />

                    <View
                        android:id="@+id/viewTwoBank"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ivBank"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:background="@color/colorDivider" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/viewOneTax"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_above="@id/ivTax"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:background="@color/colorDivider" />

                    <ImageView
                        android:id="@+id/ivTax"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_circle_step_inactive"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/ic_ao_step_details" />

                    <View
                        android:id="@+id/viewTwoTax"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ivTax"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:background="@color/colorDivider" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/viewOneFssai"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_above="@id/ivFssai"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:background="@color/colorDivider" />

                    <ImageView
                        android:id="@+id/ivFssai"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bg_circle_step_inactive"
                        android:padding="@dimen/_8sdp"
