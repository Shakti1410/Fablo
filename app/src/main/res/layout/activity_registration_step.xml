                    app:cardCornerRadius="@dimen/_8sdp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp">

                        <TextView
                            android:id="@+id/tv_titleFssai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semi_bold"
                            android:text="FSSAI Details" />

                        <TextView
                            android:id="@+id/tvDesFssai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_titleFssai"
                            android:fontFamily="@font/open_sans"
                            android:text="Be ready with your FSSAI registration"
                            android:textSize="@dimen/_8sdp" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/kycDetailsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:elevation="@dimen/_8sdp"
                    android:clickable="false"
                    app:cardCornerRadius="@dimen/_8sdp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp">

                        <TextView
                            android:id="@+id/tv_titleKyc"
                            android:layout_width="wrap_content"
