<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_75sdp"
        android:layout_margin="@dimen/_16sdp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/lvAddPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_item_add_photos"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fi_rr_camera" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/open_sans"
                    android:text="Add photo"
                    android:textColor="@color/colorIconGrey"
                    android:textSize="@dimen/_10ssp" />


            </LinearLayout>

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_food_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_semi_bold"
                android:text="Chinese Bhel"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/_14ssp" />

            <ImageView
                android:id="@+id/food_type"
                android:layout_width="@dimen/_9sdp"
                android:layout_height="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                 />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_food_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="â‚¹256"
            android:textColor="@color/colorTextTitle"
            android:textSize="@dimen/_12ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_9sdp"
                android:layout_height="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:src="@drawable/ic_item_recommended" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="Recommended Item"
                android:textColor="@color/colorTextCaption"
                android:textSize="@dimen/_9ssp" />

        </LinearLayout>

        <com.suke.widget.SwitchButton
            android:id="@+id/swith_stock"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/open_sans"
            android:text="In Stock"
            android:textSize="@dimen/_10ssp"
            app:switchPadding="@dimen/_6sdp"/>
<!--        <com.google.android.material.switchmaterial.SwitchMaterial-->
<!--            android:id="@+id/swith_stock"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="18dp"-->
<!--            android:layout_gravity="end"-->
<!--            android:layout_marginTop="@dimen/_2sdp"-->
<!--            android:fontFamily="@font/open_sans"-->
<!--            android:text="In Stock"-->
<!--            android:textSize="@dimen/_10ssp"-->
<!--            app:switchPadding="@dimen/_6sdp" />-->

    </LinearLayout>

</LinearLayout>