<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/food_type"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:src="@drawable/ic_item_food_type_veg"
            />
        <TextView
            android:id="@+id/tv_order_food_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semi_bold"
            android:layout_marginStart="@dimen/_12sdp"
            android:text="1"
            android:textColor="@color/colorTextTitle"
            android:textSize="@dimen/_14ssp" />
        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:src="@drawable/ic_fi_rr_cross_small"
            />
        <TextView
            android:id="@+id/tv_order_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_semi_bold"
            android:layout_marginStart="@dimen/_12sdp"
            android:text="Chinese Bhel"
            android:textColor="@color/colorTextTitle"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/tv_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="₹ 256"
            android:textColor="@color/colorTextTitle"
            android:textSize="@dimen/_14ssp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:text="Variants ------------------- "
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:background="@drawable/bg_icon_shade"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/_9ssp"
            android:textColor="@color/colorTextTitle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/item_variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20ssp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:text=" Variant"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_semi_bold"
            android:textColor="@color/colorTextDescription"
            android:textSize="@dimen/_12ssp"/>
            <TextView
                android:id="@+id/variant_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20ssp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:text="₹ 50"
                android:fontFamily="@font/open_sans_semi_bold"
                android:textColor="@color/colorTextDescription"
                android:textSize="@dimen/_12ssp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:text="Add Ons ------------------- "
            android:background="@drawable/bg_icon_shade"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/_9ssp"
            android:textColor="@color/colorTextTitle"/>
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_addons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_20ssp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:text=" add ons"
            android:fontFamily="@font/open_sans_semi_bold"
            android:textColor="@color/colorTextDescription"
            android:textSize="@dimen/_12ssp"/>
             <TextView
                 android:id="@+id/addon_price"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="@dimen/_20ssp"
                 android:layout_marginEnd="@dimen/_12sdp"
                 android:text="₹ 50"
                 android:fontFamily="@font/open_sans_semi_bold"
                 android:textColor="@color/colorTextDescription"
                 android:textSize="@dimen/_12ssp"/>
         </LinearLayout>
    </LinearLayout>

</LinearLayout>