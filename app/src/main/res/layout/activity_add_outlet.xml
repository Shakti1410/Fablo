<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.outlets.AddOutletActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp">

        <ImageView
            android:id="@+id/ivGoBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_gravity="center_vertical"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:src="@drawable/ic_small_arrow_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorTextTitle"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/open_sans_semi_bold"
            android:text="Add Outlet"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/lhStep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        </LinearLayout>

        <ImageView
            android:id="@+id/ivDetails"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_ao_step_details"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/bg_circle_step_inactive"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/colorDivider" />

        <ImageView
            android:id="@+id/ivTimings"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_ao_step_timings"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/bg_circle_step_inactive"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/colorDivider" />

        <ImageView
            android:id="@+id/ivPhotos"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_ao_step_photos"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/bg_circle_step_inactive"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameSetup1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_16sdp">



    </FrameLayout>

</LinearLayout>