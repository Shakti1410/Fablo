<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="store.modules.orders.OrdersFragment">

    <LinearLayout
        android:id="@+id/order_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:paddingTop="@dimen/_6sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_preparing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:background="@drawable/bg_icon_green"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_2sdp"
          >
            <TextView
                android:id="@+id/textPreparing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Preparing"
                android:fontFamily="@font/open_sans_semi_bold"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorWhite"
                />
        <TextView
            android:id="@+id/tvPreparing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:fontFamily="@font/open_sans_semi_bold"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorWhite"/>
        </LinearLayout>
          <LinearLayout
              android:id="@+id/layout_ready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
              android:layout_weight="1"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
              android:background="@drawable/bg_icon_shade"
            android:gravity="center"
              android:layout_marginEnd="@dimen/_2sdp"
          >
            <TextView
                android:id="@+id/textReady"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Ready"
                android:fontFamily="@font/open_sans_semi_bold"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorTextTitle"
                />
        <TextView
            android:id="@+id/tvReady"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:text="0"
            android:fontFamily="@font/open_sans_semi_bold"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorTextTitle"/>
          </LinearLayout>
         <LinearLayout
             android:id="@+id/layout_dispatched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
             android:layout_weight="1"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
             android:background="@drawable/bg_icon_shade"
            android:gravity="center"
          >
            <TextView
                android:id="@+id/textdispatched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dispatched"
                android:fontFamily="@font/open_sans_semi_bold"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorTextTitle"
                />
        <TextView
            android:id="@+id/tvPickedUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:fontFamily="@font/open_sans_semi_bold"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorTextTitle"/>
         </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameSetup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginTop="16dp">

    </FrameLayout>

        <ImageView
            android:id="@+id/storeOffline"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_180sdp"
            android:src="@drawable/ic_offline_7" />


</LinearLayout>