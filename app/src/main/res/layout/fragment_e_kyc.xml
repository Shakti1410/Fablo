<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboard.fragment.EKycFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/frameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <ImageView
                android:id="@+id/ivBackEkyc"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="24dp"
                android:layout_gravity="center_vertical"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/ic_nav_go_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/open_sans_semi_bold"
                android:text="8. E - Kyc Details"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/_16ssp" />

        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:text="Please Check your all documents."
            android:textColor="@color/colorTextCaption"
            android:textSize="@dimen/_12ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_10sdp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:layout_width="@dimen/_130sdp"
               android:layout_height="wrap_content"
               android:layout_marginStart="@dimen/_8sdp"
               android:layout_marginTop="@dimen/_16sdp"
               android:layout_marginBottom="@dimen/_16sdp"
               android:fontFamily="@font/open_sans_bold"
               android:padding="@dimen/_5sdp"
               android:text="1. MOU "
               android:textColor="@color/colorTextCaption"
               android:textSize="@dimen/_10ssp" />
           <com.google.android.material.button.MaterialButton
               android:id="@+id/btnviewMou"
               android:layout_width="@dimen/_60sdp"
               android:layout_height="@dimen/_40sdp"
               android:layout_marginStart="@dimen/_8sdp"
               android:layout_marginTop="@dimen/_16sdp"
               android:layout_marginEnd="@dimen/_8sdp"
               android:layout_marginBottom="@dimen/_16sdp"
               android:fontFamily="@font/open_sans_bold"
               android:text="View"
               app:cornerRadius="@dimen/_8sdp" />

           <CheckBox
               android:id="@+id/checkBoxMOU"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_16sdp"
               android:layout_marginEnd="@dimen/_10sdp"
               android:layout_marginStart="@dimen/_8sdp"
               android:enabled="false"
            />

       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/open_sans_bold"
                android:padding="@dimen/_5sdp"
                android:text="2. Assignment for Fund \n    Transfer "
                android:textColor="@color/colorTextCaption"
                android:textSize="@dimen/_10ssp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnviewFund"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/open_sans_bold"
                android:text="View"
                app:cornerRadius="@dimen/_8sdp" />

            <CheckBox
                android:id="@+id/checkBoxFund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:enabled="false"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/open_sans_bold"
                android:padding="@dimen/_5sdp"
                android:text="3. GST Details "
                android:textColor="@color/colorTextCaption"
                android:textSize="@dimen/_10ssp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnviewGst"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/open_sans_bold"
                android:text="View"
                app:cornerRadius="@dimen/_8sdp" />

            <CheckBox
                android:id="@+id/checkBoxGst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_8sdp"
               android:enabled="false" />

        </LinearLayout>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProceed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:enabled="false"
            android:fontFamily="@font/open_sans_bold"
            android:text="Proceed"
            app:cornerRadius="@dimen/_8sdp" />

        <LinearLayout
            android:id="@+id/layoutOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tiEkycOtp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:focusable="false"
            android:hint="Enter OTP"
            android:layout_gravity="center_horizontal"
            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
            app:boxCornerRadiusBottomStart="@dimen/_8sdp"
            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
            app:boxCornerRadiusTopStart="@dimen/_8sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEkycOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:maxLines="1"
                android:inputType="number"
                android:fontFamily="@font/open_sans" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmitOtp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:enabled="false"
            android:fontFamily="@font/open_sans_bold"
            android:text="Submit"
            app:cornerRadius="@dimen/_8sdp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>