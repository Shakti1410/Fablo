<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
           <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
               android:layout_marginStart="@dimen/_5sdp"
               android:layout_weight="1"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 1001"
            android:background="@drawable/background_border"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingStart="@dimen/_4sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:fontFamily="@font/open_sans_semi_bold"
            android:textColor="@color/colorTextDescription"
            android:textSize="@dimen/_9ssp"/>
           </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@drawable/background_border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:padding="5dp"
                android:visibility="gone"
                android:text="Sunday"
                android:textColor="@color/colorTextDescription"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:text="10:00"
                android:textColor="@color/colorTextDescription"
                android:textSize="@dimen/_9ssp" />

<!--            <TextView-->
<!--                android:id="@+id/order_time_zone"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="@dimen/_5sdp"-->
<!--                android:fontFamily="@font/open_sans"-->
<!--                android:paddingTop="@dimen/_2sdp"-->
<!--                android:paddingBottom="@dimen/_2sdp"-->
<!--                android:paddingStart="@dimen/_4sdp"-->
<!--                android:paddingEnd="@dimen/_4sdp"-->
<!--                android:text="AM"-->
<!--                android:layout_marginEnd="@dimen/_5sdp"-->
<!--                android:textColor="@color/colorTextDescription"-->
<!--                android:textSize="@dimen/_9ssp" />-->
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/colorIconLight"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Customer Name"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/open_sans_semi_bold"
            android:textColor="@color/colorTextDescription"
            android:textSize="@dimen/_10ssp"/>

        <TextView
            android:id="@+id/customer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9999999999"
            android:padding="5dp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:fontFamily="@font/open_sans_semi_bold"
            android:textColor="@color/colorTextDescription"
            android:textSize="@dimen/_10ssp"/>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/colorIconLight"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_order_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5ssp">

    </androidx.recyclerview.widget.RecyclerView>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/colorIconLight"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16ssp"
            android:layout_weight="1"
            android:text="Total Bill: "
            android:fontFamily="@font/open_sans"
            android:textColor="@color/colorTextDescription"
            android:textSize="@dimen/_12ssp"/>
        <TextView
            android:id="@+id/order_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            android:text=" â‚¹ 1000"
            android:textStyle="bold"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/colorTextDescription"
            android:textSize="@dimen/_12ssp"/>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/colorIconLight"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/bg_icon_shade"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Set food preparation time"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_3sdp"
        android:fontFamily="@font/open_sans_semi_bold"
        android:textColor="@color/colorTextDescription"
        android:textSize="@dimen/_10ssp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_timeMinus"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="5dp"
            android:src="@drawable/ic_fi_rr_minus_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_14ssp"
            android:layout_marginStart="@dimen/_24sdp"
            android:inputType="number"
            android:textColor="@android:color/black"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mins"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_14ssp"
            android:inputType="number"
            android:textColor="@android:color/black"
            />

        <ImageView
            android:id="@+id/img_timePlus"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_24sdp"
            android:src="@drawable/ic_fi_rr_plus_small"
            android:padding="5dp"
           />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/_16ssp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_accept"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/open_sans_bold"
            android:text="Accept"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reject"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:fontFamily="@font/open_sans_bold"
            android:text="Reject"
            app:cornerRadius="8dp" />
    </LinearLayout>
</LinearLayout>